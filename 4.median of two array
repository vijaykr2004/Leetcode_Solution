class Solution {
    public double findMedianSortedArrays(int[] arr1, int[] arr2) {
    int[] result =new int[arr1.length+arr2.length];
    double res=0;
    int i=0,j=0,k=0;
      while (i < arr1.length && j < arr2.length) {
            if (arr1[i] < arr2[j]) {
                result[k++] = arr1[i++];
            } else {
                result[k++] = arr2[j++];
            }
        }
        while (i < arr1.length) {
            result[k++] = arr1[i++];
        }
        while (j < arr2.length) {
            result[k++] = arr2[j++];
        }
    if(result.length%2==0){
    res=(result[result.length/2]+result[(result.length/2)-1])/2.0f;
    return res;
    }
    else
 res=result[result.length/2];
 return res;
    }
}
